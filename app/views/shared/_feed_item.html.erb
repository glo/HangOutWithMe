<li id="<%= feed_item.id %>">
  <span class="user">
      <%= image_tag feed_item.user.image, size: 10 %>
      <%= link_to feed_item.user.name, feed_item.user %>
  </span>
 <!--  <span class="activity">Let&#39;s <%= feed_item.activity %> </span> -->
  <span class="activity">wants to <%= feed_item.activity %> </span>
  <span class="location">at <%= feed_item.location %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago
  </span>

  <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                                       data: { confirm: "You sure?" },
                                       title: feed_item.activity %>
  <% end %>
</li>